<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />


    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        app:autoPlay="true"
        app:autoPlayDelay="3000"
        app:captionMargin="0dp"
        app:captionTextSize="14sp"
        app:carouselBackground="#00000000"
        app:imagePlaceholder="@drawable/equipe"
        app:imageScaleType="fitXY"
        app:infiniteCarousel="true"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:showCaption="true"
        app:showNavigationButtons="true"
        tools:ignore="MissingClass">

    </org.imaginativeworld.whynotimagecarousel.ImageCarousel>


    <TextView
        android:id="@+id/textUltimasAtividades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_below="@+id/carousel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="31dp"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Últimas Atividades"
        android:textColor="@color/azul_pet3"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUltimasAtividades"
        android:layout_above="@+id/bottom_menu"
        android:layout_alignParentEnd="true">


        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="0dp"
            app:columnCount="2">

            <!--alfabetização digital-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_projeto3"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/ivProjeto03"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/projeto03" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--folha de dicas-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_projeto2"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/ivProjeto02"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/projeto02" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--pensapet-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_projeto5"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/laranja">

                    <ImageView
                        android:id="@+id/ivProjeto05"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/projeto05" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--cinepet -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_projeto6"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cinepet">

                    <ImageView
                        android:id="@+id/ivProjeto06"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/projeto06" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--receba ufc-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_projeto"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivProjeto01"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/projeto01" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--petalking-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_projeto4"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_petalking">

                    <ImageView
                        android:id="@+id/ivProjeto04"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/projeto04" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </androidx.gridlayout.widget.GridLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        tools:ignore="MissingConstraints">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>


